{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "jsx": "react",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false
    },
    "include": ["resources/ts/**/*"],
    "exclude": ["node_modules", "public"]
  }
